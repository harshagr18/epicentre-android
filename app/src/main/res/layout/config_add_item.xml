<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/heroku_new_config_key_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/heroku_new_config_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="YOUR KEY"
            android:inputType="textUri"
            android:singleLine="true"
            android:textColorHint="@color/secondaryTextColor" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/heroku_new_config_value_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/heroku_new_config_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="YOUR VALUE"
            android:inputType="textUri"
            android:singleLine="true"
            android:textColorHint="@color/secondaryTextColor" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>