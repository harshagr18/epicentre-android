<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.AboutFragment">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/about_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/heading">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:id="@+id/version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop='8dp'
                    android:text="Epicentre"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="50sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:layout_below="@+id/heading">

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding='8dp'
                    android:text="Unless required by applicable law or agreed to in writing, software distributed under the License is distributed on an AS IS BASIS, WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied. See the License for the specific language governing permissions and limitations under the License."
                    android:textColor="#000000"
                    android:textSize="14sp"
                    tools:ignore="UnknownId" />

                <TextView
                    android:id="@+id/gitlink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding='8dp'
                    android:layout_marginTop="16sp"
                    android:text="https://github.com/prabhuomkar/epicentre-android"
                    android:textColor="#000000"
                    android:layout_below="@+id/description"
                    android:textSize="14sp" />


            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>